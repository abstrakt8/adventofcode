{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    /* Interop & Extras */
    "esModuleInterop": true,
    "copyOtions": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
